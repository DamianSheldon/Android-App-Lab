<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.helloworld">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".layout.LinearLayoutXMLActivity" />
        <activity android:name=".layout.LinearLayoutCodeActivity" />
        <activity android:name=".layout.RelativeLayoutXMLActivity" />
        <activity android:name=".layout.RelativeLayoutCodeActivity" />
        <activity android:name=".layout.TableLayoutActivity" />
        <activity android:name=".layout.GridLayoutActivity" />
        <activity android:name=".layout.FrameLayoutActivity" />
        <activity android:name=".layout.ConstraintLayoutActivity" />
        <activity android:name=".BaseActivity" />
        <activity android:name=".control.ButtonActivity" />
        <activity android:name=".control.CheckBoxActivity" />
        <activity android:name=".control.RadioButtonActivity" />
        <activity android:name=".control.ToggleButtonActivity" />
        <activity android:name=".control.SpinnerActivity" />
        <activity android:name=".control.PickersActivity" />
        <activity android:name=".network.NetworkActivity"></activity>
    </application>

</manifest>