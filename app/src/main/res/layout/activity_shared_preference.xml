<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shared_preference"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.helloworld.data.SharedPreferenceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/silent_mode_text_view"
        android:text="@string/silent_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/silent_mode_toggle_button"
        app:layout_constraintLeft_toRightOf="@id/silent_mode_text_view"
        android:layout_marginLeft="@dimen/silent_mode_toggle_button_left_margin"
        app:layout_constraintBaseline_toBaselineOf="@id/silent_mode_text_view"
        android:onClick="toggleSilentMode"/>

</android.support.constraint.ConstraintLayout>
